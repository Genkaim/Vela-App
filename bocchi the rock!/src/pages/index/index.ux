<template>
  <!--  div class="main" @swipe="{{swipe ? at : 1}}">  -->
  <div class="main">
    <text class="info">x: {{clientX}}px; y: {{clientY}}px</text>
    <text class="title">{{num}} | {{reward}}</text>
