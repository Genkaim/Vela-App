    <text class="info">Info height: {{height}}  width: {{width}}</text>-->
    <text class="info">{{time}} ms</text>
    <div for="{{daimaoList}}" tid="uniqueId" class="daimao1" style="position: absolute;animation-name: moveHD;animation-delay: 0s;animation-duration: 1500ms;animation-iteration-count: 1;animation-timing-function: ease-in;background-image: url('resource/daimao.png');left: {{$item.left}}px;top: 150px;height: 75px;width: 80px;"></div>
    <text class="hide" for="{{daimaoList}}">{{$idx}}: {{$item.left}}</text>
